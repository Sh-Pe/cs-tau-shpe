$mainMod = SUPER

# Example binds, see https://wiki.hyprland.org/Configuring/Binds/ for more
bind = $mainMod, Q, exec, $terminal
bind = $mainMod, C, killactive, 
bind = $mainMod ALT, C, exec, hyprctl kill
bind = $mainMod, M, exit, 
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, B, exec, $browser
bind = $mainMod, V, togglefloating, 
bind = $mainMod, Space, exec, $menu
bind = $mainMod, P, centerwindow
bind = $mainMod ALT, P, pin
bind = $mainMod, A, togglesplit, # dwindle
bind = $mainMod, L, exec, hyprlock
bind = $mainMod, F, fullscreen
bind = $mainMod, W, exec, pkill waybar; slepp 0.2; waybar

bind = $mainMod SHIFT, W, exec, killall waybar || waybar
bind = $mainMod SHIFT, E, exec, emojimart
bind = SUPER SHIFT, v, exec, cliphist list | wofi --dmenu | cliphist decode | wl-copy

# screenshoting
bind = $mainMod ALT, S, exec, grim -g "$(slurp)"

# Moving focus
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

bind = SUPER,Tab,cyclenext,          # change focus to another window
bind = SUPER,Tab,bringactivetotop,   # bring it to the top

# Volume
bind = $mainMod, f6, exec, pamixer -d 5
bind = $mainMod, f7, exec, pamixer -i 5 
bind = $mainMod, f5, exec, pamixer -t

# Brightness
bind = $mainMod, f2, exec, brightnessctl s 10-%
